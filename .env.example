# Host port to expose UI (host:container=PP_PORT:3000)
PP_PORT=8010

# App settings
PP_TIMEZONE=Asia/Shanghai
PP_EMAIL_ENABLED=false
PP_DAILY_JOB_TIME=09:05
PP_NOTIFY_COOLDOWN_MINUTES=360
PP_CRYPTO_SLIP_PCT=1

# Cache/refresh tuning (lower = fresher, higher = less CPU/network)
PP_CACHE_ACTIVE_REFRESH_SECONDS=4
PP_CACHE_IDLE_REFRESH_SECONDS=20
PP_CACHE_IDLE_AFTER_SECONDS=60
PP_CACHE_MIN_REFRESH_GAP_SECONDS=1
PP_SNAPSHOT_INTERVAL_SECONDS=60

# SMTP (optional; can also be configured in /settings)
PP_SMTP_HOST=
PP_SMTP_PORT=587
PP_SMTP_USERNAME=
PP_SMTP_PASSWORD=
PP_SMTP_USE_STARTTLS=true
PP_MAIL_FROM=
PP_MAIL_TO=

# Chain RPCs (optional)
PP_RPC_ETH=
PP_RPC_BSC=
PP_RPC_POLYGON=
PP_RPC_SOLANA=https://api.mainnet-beta.solana.com
